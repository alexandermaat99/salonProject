<!-- This HTML document allows users to edit stylist information within a web application. 
  It features a responsive layout with pre-filled form fields based on the stylist's current data. 
  Users can make edits, and a "Back" button provides navigation to the user page. JavaScript is included to handle 
  changes in the form fields, although the "Admin" field is not present in the form. -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Stylist</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <header class="header">
        <a href="/user" class="back-button material-icons-round">arrow_back</a>

        <h1>Edit Stylist</h1>
      </header>
      <form
        action="/editUser/<%= stylist.styleID %>"
        method="POST"
        class="form-stylist"
      >
        <label for="stylFName">First Name:</label>
        <input
          type="text"
          id="stylFName"
          name="stylFName"
          value="<%= stylist.stylFName %>"
          required
        />

        <label for="stylLName">Last Name:</label>
        <input
          type="text"
          id="stylLName"
          name="stylLName"
          value="<%= stylist.stylLName %>"
          required
        />

        <label for="email">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= stylist.email %>"
          required
        />

        <label for="stylTel">Phone:</label>
        <input
          type="tel"
          id="stylTel"
          name="stylTel"
          value="<%= stylist.stylTel %>"
        />

        <label for="password">Password:</label>
        <input
          type="text"
          id="password"
          name="password"
          value="<%= stylist.password %>"
          required
        />

        <label for="calLink">Scheduling Link:</label>
        <input
          type="text"
          id="calLink"
          name="calLink"
          value="<%= stylist.calLink %>"
          required
        />

        <!-- ... rest of your form ... -->

        <button type="submit" class="submit-btn">Update Stylist</button>
        <script>
          document
            .getElementById("admin")
            .addEventListener("change", function () {
              var admin = this.checked;
              console.log(admin); // Add this for debugging
              // Additional code to handle the change event
            });
        </script>
      </form>
    </div>
  </body>
</html>
