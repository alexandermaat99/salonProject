<!-- views/stylist.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stylist View</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <form action="<%= isAdmin ? '/admin' : '/user' %>" method="get">
      <button type="submit">Back</button>
    </form>
    <h1>Client Information for Stylist <%= stylFName %></h1>

    <table>
      <thead>
        <tr>
          <th>Time of Submission:</th>
          <th>Client First Name</th>
          <th>Client Last Name</th>
          <th>Client Email</th>
          <!-- Add more columns based on your client information -->
        </tr>
      </thead>
      <tbody>
        <% clients.forEach((client) => { %>
        <tr>
          <td><%= formatTimestamp(client.timeCreated) %></td>
          <td><%= client.cusFName %></td>
          <td><%= client.cusLName %></td>
          <td><%= client.cusEmail %></td>
          <td></td>
          <td>
            <form action="/clientInfo" method="get">
              <input type="hidden" name="resId" value="<%= client.resID %>" />
              <input type="hidden" name="stylistId" value="<%= stylistId %>" />
              <button type="submit">Client Details</button>
            </form>
          </td>
          <td>
            <form
              action="/deleteClient/<%= client.resID %>"
              method="post"
              onsubmit="return confirmDelete();"
            >
              <button type="submit">Delete</button>
            </form>
          </td>
          <!-- Add more cells based on your client information -->
        </tr>
        <% }); %>
      </tbody>
    </table>
    <script>
      function confirmDelete() {
        return confirm("Are you sure you want to delete this client?");
      }
    </script>
  </body>
</html>
