<!-- views/stylist.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stylist View</title>
  </head>
  <body>
    <h1>Client Information for Stylist <%= stylistId %></h1>

    <table>
      <thead>
        <tr>
          <th>Time of Submission:</th>
          <th>Client First Name</th>
          <th>Client Last Name</th>
          <th>Client Email</th>
          <!-- Add more columns based on your client information -->
        </tr>
      </thead>
      <tbody>
        <% clients.forEach((client) => { %>
          <tr>
            <td><%= client.timecreated %></td>
            <td><%= client.cusFName %></td>
            <td><%= client.cusLName %></td>
            <td><%= client.cusemail %></td>
            <td>
              <form action="/stylist/<%= stylistId %>/clientInfo" method="get">
                <input type="hidden" name="resId" value="<%= client.resID %>">
                <button type="submit">Client Details</button>
              </form>
            </td>
            <!-- Add more cells based on your client information -->
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
