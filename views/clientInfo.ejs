<!-- views/clientInfo.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Client Information</title>
    <link rel="stylesheet" href="/public/style.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons+Round"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <h1>Client Information</h1>

    <table>
      <thead>
        <tr>
          <th>Field</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Time of Submission:</td>
          <td><%= formatTimestamp(client.timeCreated) %></td>
        </tr>

        <tr>
          <td>Client First Name:</td>
          <td><%= client.cusFName %></td>
        </tr>

        <tr>
          <td>Client Last Name:</td>
          <td><%= client.cusLName %></td>
        </tr>

        <tr>
          <td>Client Email:</td>
          <td><%= client.cusTel %></td>
        </tr>

        <tr>
          <td>Date of their last service:</td>
          <td><%= formatDate(client.dateLastServ) %></td>
        </tr>

        <tr>
          <td>Medical condition?:</td>
          <td><%= client.medCond %></td>
        </tr>

        <tr>
          <td>Service Chosen:</td>
          <td><%= client.serviceDescription %></td>
        </tr>

        <td>
          <form
            action="/deleteClient/<%= client.resID %>"
            method="post"
            onsubmit="return confirmDelete();"
          >
            <button type="submit">Delete</button>
          </form>
        </td>

        <!-- Add more rows based on your client information -->
      </tbody>
    </table>

    <a href="/stylist/<%= stylistId %>">Back to Stylist View</a>
    <script>
      function confirmDelete() {
        return confirm("Are you sure you want to delete this client?");
      }
    </script>
  </body>
</html>
