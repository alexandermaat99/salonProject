    <!-- Other headers -->

    <table
      style="
        width: 80vw;
        background-color: #80808035;
        border: 1px solid #67d633;
      "
    >
      <thead>
        <tr>
          <th style="text-align: left">First Name</th>
          <th style="text-align: left">Last Name</th>
          <th style="text-align: left">email</th>
          <th style="text-align: left">phone</th>
          <th style="text-align: left">password</th>
          <th style="text-align: left">admin</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < stylists.length; i++) { %>
        <tr>
          <td><%= stylists[i].stylFName %></td>
          <td><%= stylists[i].stylLName %></td>
          <td><%= stylists[i].email %></td>
          <td><%= stylists[i].stylTel %></td>
          <td><%= stylists[i].password %></td>
          <td><%= stylists[i].admin %></td>
          <td>
            <form action="/editUser/<%= stylists[i].id %>" method="GET">
              <button type="submit" class="edit-button">Edit</button>
            </form>
          </td>
          <td>
            <form
              action="/deleteUser/<%= stylists[i].styleID %>"
              method="POST"
              onsubmit="return confirmDelete()"
            >
              <button type="submit" class="delete-button">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
      <br /><br />
    </table>
    <br /><br />

    <form style="text-align: right" action="/addUser" method="GET">
      <button type="submit">Add New User</button>
    </form>
    <script>
      function confirmDelete() {
        return confirm(
          "Are you sure you want to delete this record permanently?"
        );
      }
    </script>
  </body>
